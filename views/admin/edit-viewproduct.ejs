<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form action="/admin/edit-product/<%=editproduct._id %>" method="POST" enctype="multipart/form-data">
            <label for="">Prodcut Name</label>
            <input type="text" name="name" class="form-control" value="<%=editproduct.Productname%>" required />
            <label for="">Description</label>
            <input type="text" name="description" class="form-control" value="<%=editproduct.ProductDescription%>" required />
  
            <label for="">Price</label>
            <input type="text" name="price" id="Price" class="form-control" onkeyup="validatePrice()" value="<%=editproduct.Price%>" required />
            <p style="color: red;" id="PriceError"></p>

            <label for="">Offer Price</label>
            <input type="text" name="price" id="OfferPrice" class="form-control" onkeyup="validateOfferPrice()" value="<%=editproduct.OfferPrice%>" required />
            <p style="color: red;" id="OfferPriceError"></p>
            
            <label for="cars">Category</label>
           
            <select class="form-select" name="category" id="cars">
              <option ><%=editproduct.category %></option>
              <% procategory.forEach(function(procategory) { %>
                <% if (editproduct.category == procategory.CategoryName) { %>
                  
                  <%} else { %>
                  <option ><%=procategory.CategoryName %></option>
                  <% } %>
                  
              <% } )%>
            </select>
          
            <label for="">Quantity</label>
            <input type="text" name="quantity" id="Quantity" class="form-control" onkeyup="validateQuantity()" value="<%=editproduct.Quantity%>" required />
            <p style="color: red;" id="QuantityError"></p>
  
            <label for="">Image1</label>
            <img src="/uploads/<%=editproduct.Image[0]%>" alt="" style="width:100px;height:auto" id="imageEdit1" class="mt-3 mb-3">
            <input type="file" name="image1" accept=".jpg,.jpeg,.png" class="form-control" onchange="changeImage1(event)" />


            <label for="">Image2</label>
            <img src="/uploads/<%=editproduct.Image[1]%>" alt="" style="width:100px;height:auto" id="imageEdit2" class="mt-3 mb-3">
            <input type="file" name="image2" accept=".jpg,.jpeg,.png" class="form-control" onchange="changeImage2(event)" />

            <label for="">Image3</label>
            <img src="/uploads/<%=editproduct.Image[2]%>" alt="" style="width:100px;height:auto" id="imageEdit3" class="mt-3 mb-3">
            <input type="file" name="image3" accept=".jpg,.jpeg,.png" class="form-control" onchange="changeImage3(event)" />

            <label for="">Image4</label>
            <img src="/uploads/<%=editproduct.Image[3]%>" alt="" style="width:100px;height:auto" id="imageEdit4" class="mt-3 mb-3">
            <input type="file" name="image4" accept=".jpg,.jpeg,.png" class="form-control" onchange="changeImage4(event)" />
  
            <button type="submit" onclick="return totalValidation()" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
   function changeImage1(event)
    {

      document.getElementById('imageEdit1').src = URL.createObjectURL(event.target.files[0])
      
    }
    function changeImage2(event)
    {

      document.getElementById('imageEdit2').src = URL.createObjectURL(event.target.files[0])
      
    }
    function changeImage3(event)
    {

      document.getElementById('imageEdit3').src = URL.createObjectURL(event.target.files[0])
      
    }
    function changeImage4(event)
    {

      document.getElementById('imageEdit4').src = URL.createObjectURL(event.target.files[0])
    }




    function validateQuantity(){
      
      let  quant = document.getElementById('Quantity').value;
      console.log(quant);
  
      let quantRegx= /^\d+$/;
     
      if (!quantRegx.test(quant))
   
      {
        document.getElementById('QuantityError').innerHTML= 'invalid quantity'
        return false
      }else{
        document.getElementById('QuantityError').innerHTML= ''
        return true
      }
  
    }
  
    function validatePrice(){
      
      let  quant = document.getElementById('Price').value;
      console.log(quant);
  
      let quantRegx= /^\d+$/;
      
      if (!quantRegx.test(quant))
   
      {
        document.getElementById('PriceError').innerHTML= 'invalid Price'
        return false
      }else{
        document.getElementById('PriceError').innerHTML = ''
        return true
      }
  
    }
  
    function validateOfferPrice(){
      
      let  quant = document.getElementById('OfferPrice').value;
      console.log(quant);
  
      let quantRegx= /^\d+$/;
      if (!quantRegx.test(quant))
   
      {
        document.getElementById('OfferPriceError').innerHTML= 'invalid OfferPrice'
        return false
      }else{
        document.getElementById('OfferPriceError').innerHTML= ''
        return true
      }
  
    }
    function totalValidation(){
      if (validateQuantity()&&validatePrice()&&validateOfferPrice()){
        return true
      }else {
        return false
      }
    }
  </script>