<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Banner management</h2>
        <form 
          action="/admin/add-banner"
          method="POST"
          enctype="multipart/form-data"
         >

         <label for="">Title</label>
          <input type="text" name="title" class="form-control" />

          <label for="">Description</label>
          <input type="text" name="description" class="form-control" />

          <label for="">Link</label>
          <input type="text" name="link" class="form-control" />

          <label for="">Image</label>
          <input type="file" name="bannerImg" class="form-control" />
          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- Table section -->
<section w-50 mx-auto>
  <div class="card-body">
    <div class="row w-50 mt-5 mx-auto">
      <div class="table-responsive">
        <div class="table-responsive">
          <table class="table align-middle table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th class="align-middle" scope="col">No.</th>
                <th class="align-middle" scope="col">Banner name</th>
                <th class="align-middle" scope="col">Option</th>
              </tr>
            </thead>
            <tbody>

              <% viewBanners.forEach(function(viewBanners,index){ %>

              <tr>
                <td><%= index+1 %></td>

                <td><%= viewBanners.title %></td>
                <td>
                
                  
                  <a href="/admin/delete-banner/<%= viewBanners._id %>" class="btn btn-xs btn-danger" onclick="return confirm('Are you want to delete <%= viewBanners.title %>?')"> Delete</a>
                  <!-- <a href="/admin/delete-banner/<%= viewBanners._id %>" class="btn btn-xs btn-danger"   onclick="return deleteAlert(), event.preventDefault()"> Delete</a> -->
                </td>
              </tr>
              <% })%>

            </tbody>
          </table>
        </div>
      </div>
      <!-- table-responsive end// -->
    </div>
  </div>
</section>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css" rel="stylesheet" />
<script>
  function deleteAlert()
 {

  swal({
  title: "Are you sure?",
  text: "Once deleted, you will not be able to recover this category!",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    swal("category  deleted sucessfully!", {
      icon: "success",
    });
  } else {
    swal("category not deleted !");
  }
});
  
} 
</script>